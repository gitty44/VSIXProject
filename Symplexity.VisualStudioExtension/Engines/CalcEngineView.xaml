<UserControl x:Class="Symplexity.VisualStudioExtension.Engines.CalcEngineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:local="clr-namespace:Symplexity.VisualStudioExtension"
             local:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"             
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="0,-20,-88,-377">
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="617" Margin="10,54,0,0" VerticalAlignment="Top" Width="357" Visibility="{Binding TabVisibility}">
            <TabItem Header="Calculation Files">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Template Files" Height="22" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Advanced Calc Files"/>
            <ListBox x:Name="listCalcFiles" Height="100" Width="100"/>
        </TabControl>
        <Label x:Name="label" Content="Calculation Engine" HorizontalAlignment="Left" Height="27" Margin="10,22,0,0" VerticalAlignment="Top" Width="117"/>

    </Grid>
</UserControl>
